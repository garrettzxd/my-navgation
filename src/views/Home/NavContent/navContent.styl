@import "~@/style/global.styl"

.navContent{
  padding-top 20px

  &__detail{
    padding 20px
    margin-top 20px
    background rgba(0,0,0,0.3)
    border-radius 8px
    color #fff
  }

  &__item{
    display inline-block
    text-decoration none
    color white
    width 112px
    height 112px
    border-radius 6px
    padding-top 16px
    text-align center
    box-sizing border-box

    &:hover{
      background rgba(255, 255, 255, 0.3)
    }

    &__logo{
      background white
      padding 20px
      width 48px
      height 48px
      box-sizing border-box
      border-radius 50%
      text-align center
      display inline-flex
      align-items center
      justify-content center

      img{
        width 24px
        height 24px
      }
    }

    &__text{
      text-align center
      padding-top 10px
      font-size 13px
    }
  }
}
