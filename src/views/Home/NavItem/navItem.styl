@import "~@/style/global.styl"
$navItemSize = 100px
$logoSize = 40px
$imageSize = 22px

.nav-item{
  display inline-block
  text-decoration none
  color white
  width $navItemSize
  height $navItemSize
  border-radius 6px
  padding-top 16px
  text-align center
  box-sizing border-box
  cursor pointer

  &:hover{
    background rgba(255, 255, 255, 0.3)
  }

  &__logo{
    background white
    padding 20px
    width $logoSize
    height $logoSize
    box-sizing border-box
    border-radius 50%
    text-align center
    display inline-flex
    align-items center
    justify-content center

    img{
      width $imageSize
      height $imageSize
    }
  }

  &__text{
    text-align center
    padding-top 10px
    font-size 13px
  }
}
